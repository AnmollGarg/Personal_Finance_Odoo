<odoo>
    <!-- List View -->
    <record id="view_personal_finance_investment_list" model="ir.ui.view">
        <field name="name">personal.finance.investment.list</field>
        <field name="model">personal.finance.investment</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="investment_id"/>
                <field name="investment_name"/>
                <field name="investment_type"/>
                <field name="amount_invested"/>
                <field name="current_value"/>
                <field name="investment_date"/>
                <field name="maturity_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_personal_finance_investment_form" model="ir.ui.view">
        <field name="name">personal.finance.investment.form</field>
        <field name="model">personal.finance.investment</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="investment_id"/>
                        <field name="investment_name" placeholder="Enter investment name"/>
                        <field name="investment_type" widget="radio"/>
                        <field name= "amount_invested" placeholder="Amount invested"/>
                        <field name="current_value" placeholder="Current value"/>
                        <field name="investment_date"/>
                        <field name="maturity_date"/>
                        <field name="is_reoccurring"/>
                        <field name="is_one_time"/>
                        <field name="is_monthly"/>
                        <field name="interest_rate" placeholder="Interest rate (%)"/>
                        <field name = "risk_level" widget="radio"/>
                        <field name="notes" placeholder="Add notes or remarks"/>
                        <field name="attachment" placeholder="Upload document"/>

                    </group>

                </sheet>
                  <chatter>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </chatter >
            </form>
        </field>
    </record>
</odoo>