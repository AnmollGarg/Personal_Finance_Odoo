<odoo>
    <!-- List View -->
    <record id="view_personal_finance_debt_list" model="ir.ui.view">
        <field name="name">personal.finance.debt.list</field>
        <field name="model">personal.finance.debt</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="debt_id"/>
                <field name="debt_name"/>
                <field name="debt_type"/>
                <field name="amount_debt"/>
                <field name="current_value"/>
                <field name="debt_date"/>
                <field name="repay_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_personal_finance_debt_form" model="ir.ui.view">
        <field name="name">personal.finance.debt.form</field>
        <field name="model">personal.finance.debt</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Basic Information">
                            <field name="debt_id"/>
                            <field name="debt_name" placeholder="Enter debt name"/>
                            <field name="debt_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="risk_level" widget="radio"/>
                        </group>
                        <group string="Debt Details">
                            <field name="transaction_ids" placeholder="Transaction ID"/>
                            <field name="amount_debt" placeholder="Amount debt"/>
                            <field name="current_value" placeholder="Current value"/>
                            <field name="interest_rate" placeholder="Interest rate (%)"/>
                            <field name="debt_date"/>
                            <field name="repay_date"/>
                        </group>
                    </group>
                    <group>
                        <group string="Debt Frequency">
                            <field name="is_reoccurring"/>
                            <field name="is_one_time"/>
                            <field name="is_monthly"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Additional Details">
                            <group>
                                <field name="notes" placeholder="Add notes or remarks"/>
                                <field name="attachment" placeholder="Upload document"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </chatter>
            </form>
        </field>
    </record>
</odoo>