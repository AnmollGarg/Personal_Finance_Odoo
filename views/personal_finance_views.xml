<odoo>
    <!-- List View -->
    <record id="view_personal_finance_list" model="ir.ui.view">
        <field name="name">personal.finance.list</field>
        <field name="model">personal.finance</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list default_order="transaction_id desc">
                <field name="transaction_id"/>
                <field name="date"/>
                <field name="transaction_name"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="bank_ids"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_personal_finance_form" model="ir.ui.view">
        <field name="name">personal.finance.form</field>
        <field name="model">personal.finance</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="transaction_id"/>
                        <field name="transaction_name"/>
                        <field name="amount" placeholder="Amount"/>
                        <field name="date"/>
                        <field name="transaction_type" widget="radio" options="{'horizontal': true}"/>
                        <field name="transaction_from" widget="radio" options="{'horizontal': true}"/>
                    </group>
                    <group string="Category">
                        <field name="category_income" widget="radio" options="{'horizontal': true}" placeholder="Income category" invisible = "transaction_type != 'income'"/>
                        <field name="category_expense" widget="radio" options="{'horizontal': true}" placeholder="Expense category" invisible = "transaction_type != 'expense'"/>
                    </group>
                    <group>
                        <field name="bank_ids" invisible = "transaction_from == 'cash'"/>
                        <field name="investment_ids" invisible = "category_expense != 'investment'"/>
                    </group>
                    <notebook>
                        <page string="Additional Details">
                            <group>
                        <field name="notes" placeholder="Add notes or remarks"/>
                        <field name="attachment" placeholder="Upload receipt or document"/>
                    </group>
                        </page>

                    </notebook>
                </sheet>
                  <chatter>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </chatter >
            </form>
        </field>
    </record>

    <record id="view_personal_finance_search" model="ir.ui.view">
        <field name="name">personal.finance.search</field>
        <field name="model">personal.finance</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="transaction_name"/>
                <field name="date"/>
                <field name="bank_ids"/>
                <filter string="Group by Bank" name="group_by_bank" context="{'group_by':'bank_ids'}"/>
            </search>
        </field>
    </record>
</odoo>