<odoo>
    <record id="action_personal_finance_list" model="ir.actions.act_window">
        <field name="name">Personal Finance</field>
        <field name="res_model">personal.finance</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_personal_finance_bank_list" model="ir.actions.act_window">
        <field name="name">Bank Accounts</field>
        <field name="res_model">personal.finance.bank</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_personal_finance_investment_list" model="ir.actions.act_window">
        <field name="name">Investments</field>
        <field name="res_model">personal.finance.investment</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_personal_finance_asset_list" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">personal.finance.asset</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_personal_finance_liability_list" model="ir.actions.act_window">
        <field name="name">Liabilities</field>
        <field name="res_model">personal.finance.liability</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_personal_finance_debt_list" model="ir.actions.act_window">
        <field name="name">Debts</field>
        <field name="res_model">personal.finance.debt</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Top-level menu -->
    <menuitem id="menu_personal_finance_root" name="Personal Finance" sequence="10"/>

    <menuitem id="menu_personal_finance" name="Personal Finance"
        parent="menu_personal_finance_root"
        action="personal_finance.action_personal_finance_list"
        sequence="10"/>

    <menuitem id="menu_personal_finance_bank" name="Bank Accounts"
        parent="menu_personal_finance_root"
        action="personal_finance.action_personal_finance_bank_list"
        sequence="20"/>

    <menuitem id="menu_personal_finance_investment" name="Investments"
        parent="menu_personal_finance_root"
        action="personal_finance.action_personal_finance_investment_list"
        sequence="30"/>

    <menuitem id="menu_personal_finance_asset" name="Assets"
        parent="menu_personal_finance_root"
        action="personal_finance.action_personal_finance_asset_list"
        sequence="40"/>

    <menuitem id="menu_personal_finance_liability" name="Liabilities"
        parent="menu_personal_finance_root"
        action="personal_finance.action_personal_finance_liability_list"
        sequence="50"/>

    <menuitem id="menu_personal_finance_debt" name="Debts"
        parent="menu_personal_finance_root"
        action="personal_finance.action_personal_finance_debt_list"
        sequence="60"/>


</odoo>